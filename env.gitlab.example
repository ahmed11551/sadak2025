# GitLab CI/CD Environment Variables
# Copy these variables to GitLab Settings → CI/CD → Variables

# Docker Registry
CI_REGISTRY_USER=your-username
CI_REGISTRY_PASSWORD=your-password

# SSH Configuration
SSH_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
# Your private SSH key here
-----END RSA PRIVATE KEY-----

# Staging Server
STAGING_SERVER=staging.sadaka-pass.com
STAGING_USER=deploy

# Production Server
PRODUCTION_SERVER=sadaka-pass.com
PRODUCTION_USER=deploy

# Database
POSTGRES_DB=sadaka_pass
POSTGRES_USER=sadaka_user
POSTGRES_PASSWORD=your-strong-password

# Application URLs
API_URL=https://sadaka-pass.com/api
STAGING_URL=https://staging.sadaka-pass.com
PRODUCTION_URL=https://sadaka-pass.com

# Security
SECRET_KEY=your-secret-key-here

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Payment Systems
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
CLOUDPAYMENTS_PUBLIC_ID=your-public-id
CLOUDPAYMENTS_API_SECRET=your-api-secret

# Environment
ENVIRONMENT=production

